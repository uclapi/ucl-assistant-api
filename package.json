{
  "name": "ucl-assistant-api",
  "version": "0.6.0",
  "private": true,
  "description": "Server to support the UCL Assistant app",
  "repository": "https://github.com/uclapi/ucl-assistant",
  "license": "MIT",
  "author": "Matthew Bell",
  "main": "server.js",
  "scripts": {
    "format": "eslint . --fix --ext .js --ignore-path .eslintignore",
    "lint:staged": "lint-staged",
    "start": "node server.js",
    "start:dev": "nodemon server --ignore __tests__",
    "test": "TEST_MODE=true jest --ci && codecov",
    "test:dev": "TEST_MODE=true jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "testURL": "http://localhost/"
  },
  "dependencies": {
    "@sentry/node": "^5.15.5",
    "axios": "^0.19.2",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-jwt": "^3.6.0",
    "koa-mount": "^4.0.0",
    "koa-router": "^8.0.8",
    "koa-session": "^5.13.1",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.0",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "codecov": "^3.6.5",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-no-secrets": "^0.6.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.2.5",
    "jest": "^25.5.2",
    "lint-staged": "^10.2.1",
    "nodemon": "^2.0.3",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2"
  },
  "engines": {
    "node": ">=12.13.0"
  }
}
